extends ../layout/main

block variables
  - const pageTitle = 'Detail'

block content


  #detail-page
    .filter-nav
      .m-container
        .m-row
          .m-col.m-col--15
            .filter-wrap
              a(href="./catalog.html") Detail
                img(src="../media/icon/arrow-left.svg", alt="")
    .m-container
      .m-row
        .m-col.m-col--15
          .catalog-detail
            h3 Elbag
            h2 Little E - Lether / Cotton
            #single-owl.owl-carousel.owl-theme
              .item
                .detail-slide
                  img(src="../media/icon/modal-elem.svg", alt="image")
              .item
                .detail-slide
                  img(src="../media/icon/modal-elem2.svg", alt="image")
              .item
                .detail-slide
                  img(src="../media/image/list4.png", alt="image")
              .item
                .detail-slide
                  img(src="../media/icon/modal-elem2.svg", alt="image")
