extends ../layout/main

block variables
  - const pageTitle = 'Create an account'

    mixin asideNav(link,name)
      li
        a(href=link)=name 

block content
  include ../modules/header
  include ../modules/modal-menu

  #sign_in_page.inner-page 
    .m-container
      .m-row
        .m-col.m-col--3.m-col__lg--3.m-col__ms--2.m-col__mxs--15
          a.inner-btn.account-back(href="/") return
        .m-col.m-col--9.m-col__lg--10.m-col__ms--12.m-col__mxs--15
          .inner-content
            .account-title
              h1 Sign in
              a(href="./create_account.html") Create an account
            .inner-photo
              .text Email adress:
              input(type="text" placeholder="")
            .inner-photo
              .text Password:
              .inp-block
                input(type="password" placeholder="" style="border: none")
                h3 FORGOT?
            .inner-photo
              .text
              .btn-wrap
                .checkbox 
                  input(type="checkbox" checked).option-input
                  h3 Remember Me   
            .inner-photo
              .text
              .btn-wrap
                .btn-account   
                  button SIGN IN 
      .m-row
        .m-col.m-col--15
          include ../modules/footer         