extends ../layout/main

block variables
    - const pageTitle = 'Checkout'

    mixin asideNav(link,name)
        li
            a(href=link)=name

block content
    include ../modules/header_other
    include ../modules/modal-menu

    #checkout.inner-page
        .m-container
            .m-row
                .m-col.m-col--3.m-col__lg--3.m-col__ms--15.m-col__mxs--15
                    a.inner-btn.account-back(href="/") Back to website
                .m-col.m-col--8.m-col__lg--8.m-col__ms--15.m-col__mxs--15
                    .inner-content
                        .account-title
                            h1 Checkout
                        .inner-block
                            h3 Delivery address
                        .inner-photo
                            .text Template:
                            .birth-block
                                select#mounth.js-template
                                    option(value="hide") Template:
                                    option(value="template 1" data-name='Jon' data-last-name='Dou' data-company='Apple' data-address='Address' data-zip='111' data-country='Russian Federation' data-city='Moscow' data-phone='+3983782732323') Template 1
                                    option(value="template 2" data-name='Dou' data-last-name='Jon' data-company='Microsoft' data-address='Address 2' data-zip='777' data-country='USA' data-city='Boston' data-phone='+34908573487') Template 2
                        .inner-photo
                            .text Receiver last name:
                            input(type="text" placeholder="" id='js-template-last-name')
                        .inner-photo
                            .text Receiver first name:
                            input(type="text" placeholder="" id='js-template-name')
                        .inner-photo
                            .text Company name: #[span.opacity-span (optional)]
                            input(type="text" placeholder="" id='js-template-company')
                        .inner-photo
                            .text Address:
                            input(type="text" placeholder="" id='js-template-address')
                        .inner-photo
                            .text ZIP-code:
                            input(type="text" placeholder="" id='js-template-zip')
                        .inner-photo
                            .text Country:
                            .birth-block
                                select#country.js-template-country
                                    option(value="hide") Country
                                    option(value="01") 01
                                    option(value="02") 02
                                    option(value="03") 03
                                    option(value="04") 04
                                    option(value="05") 05
                                    option(value="Russian Federation") Russian Federation
                                    option(value="USA") USA
                                    option(value="08") 08
                                    option(value="09") 09
                                    option(value="10") 10

                        .inner-photo
                            .text City
                            input(type="text" placeholder="" id='js-template-city')
                        .inner-photo
                            .text Phone number:
                            input(type="text" placeholder="" id='js-template-phone')
                    .inner-content
                        .inner-block
                            h3 Billing address
                        ul.address-block.checkout-block
                            li
                                label.radio
                                    input(type="radio" name="r" value="1" checked)
                                    span Same as delivery address
                                label.radio
                                    input(type="radio" name="r" value="1" checked)
                                    span Add an alternative
                        .inner-photo
                            .text
                            .method_type.address-type
                                button Same as delivery address
                                button Add an alternative
                        .inner-photo
                            .text Template:
                            .birth-block
                                select#mounth.js-template-billing
                                    option(value="hide") Template:
                                    option(value="template 1" data-name='Jon' data-last-name='Dou' data-company='Apple' data-address='Address' data-zip='111' data-country='Russian Federation' data-city='Moscow' data-phone='+3983782732323') Template 1
                                    option(value="template 2" data-name='Dou' data-last-name='Jon' data-company='Microsoft' data-address='Address 2' data-zip='777' data-country='USA' data-city='Boston' data-phone='+34908573487') Template 2
                        .inner-photo
                            .text Receiver last name:
                            input(type="text" placeholder="" id='js-billing-last-name')
                        .inner-photo
                            .text Receiver first name:
                            input(type="text" placeholder="" id='js-billing-name')
                        .inner-photo
                            .text Company name: #[span.opacity-span (optional)]
                            input(type="text" placeholder="" id='js-billing-company')
                        .inner-photo
                            .text Address:
                            input(type="text" placeholder="" id='js-billing-address')
                        .inner-photo
                            .text ZIP-code:
                            input(type="text" placeholder="" id='js-billing-zip')
                        .inner-photo
                            .text Country:
                            .birth-block
                                select#country.js-billing-country
                                    option(value="hide") Country
                                    option(value="01") 01
                                    option(value="02") 02
                                    option(value="03") 03
                                    option(value="04") 04
                                    option(value="05") 05
                                    option(value="06" selected)  Russian Federation
                                    option(value="07") 07
                                    option(value="08") 08
                                    option(value="09") 09
                                    option(value="10") 10

                        .inner-photo
                            .text City
                            input(type="text" placeholder="" id='js-billing-city')
                        .inner-photo
                            .text Phone number:
                            input(type="text" placeholder="" id='js-billing-phone')
                    .inner-content
                        .inner-block
                            h3 Payment Methods
                        .inner-photo
                            .text Template:
                            .birth-block
                                select#mounth.js-template-payment
                                    option(value="hide") Template:
                                    option(value="template 1" data-method='credit card' data-number='4565646546464' data-until-m='April' data-until-y='2019' data-cardholder='JON DOU' data-cvv='111') Template 1
                                    option(value="template 2" data-method='paypal' data-number='798798798797' data-until-m='May' data-until-y='2020' data-cardholder='DOU JON' data-cvv='000') Template 2
                        .inner-photo
                            .text Method type:
                            .method_type.js-tamplate-method
                                button(data-type='credit card') #[span Credit] card
                                button(data-type='paypal') Paypal
                                button(data-type='unionpay') UnionPay
                        .inner-photo
                            .text Card number::
                            input(type="number" id='js-payment-number')
                        .inner-photo
                            .text Until:
                            .birth-block.cardUntil
                                select#mounthid.js-payment-month
                                    option(value="hide") Month
                                    option(value="01") January
                                    option(value="02") February
                                    option(value="03") March
                                    option(value="04" selected) April
                                    option(value="05") May
                                    option(value="06") June
                                    option(value="07") July
                                    option(value="08") August
                                    option(value="09") September
                                    option(value="10") October
                                    option(value="09") November
                                    option(value="10") December
                                select#yearid.js-payment-year
                                    option(value="hide") year
                                    option(value="01") 01
                                    option(value="02") 02
                                    option(value="03" selected) 1992
                                    option(value="04") 04
                                    option(value="05") 05
                                    option(value="06") 06
                                    option(value="07") 07
                                    option(value="08") 08
                                    option(value="09") 09
                                    option(value="10") 10
                        .inner-photo
                            .text Cardholder:
                            input(type="text" id='js-payment-cardholder')
                        .inner-photo
                            .text CVV/CVC:
                            input(type="password" id='js-payment-cvv')
                .m-col.m-col--4.m-col__lg--4.m-col__ms--15.m-col__mxs--15
                    .paynow-wrap
                        .item
                            h3 Subtotal:
                            div € 2,000.00
                        .item
                            h3 Shipping: *
                            div € 0.00
                        .item
                            h4 Total:
                            div(style="font-weight: bold") € 2,000.00
                        button PAY NOW
                        p * The full shipping cost is calculated after the delivery point is indicated.


            .m-row
                .m-col.m-col--15
                    include ../modules/footer