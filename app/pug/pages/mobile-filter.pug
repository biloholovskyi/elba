extends ../layout/main

block variables
	- const pageTitle = 'Filter'

block content


	#filter-page
		.filter-nav
			.m-container
				.m-row
					.m-col.m-col--15
						.filter-wrap
							a(href="./catalog.html") Filter
								img(src="../media/icon/arrow-left.svg", alt="")
		.m-container
			.m-row
				.m-col.m-col--15
					.aside-catalog
						ul
							li.dropdown

								h3  Product type
